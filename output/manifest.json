{
  "name": "Quick Rundown",
  "version": "1.0",
  "description": "Summarize any article from the following websites: developer.google.com",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "options_page":"options.html",
  "manifest_version": 2
}
